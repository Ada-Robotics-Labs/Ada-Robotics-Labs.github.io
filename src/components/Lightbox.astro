---
// src/components/Lightbox.astro
---

<div id="lightbox" class="lightbox">
  <span class="close" onclick="window.closeLightbox()">×</span>
  <img id="lightbox-img" class="lightbox-content" src="" alt="Imagem em destaque" />
  <div class="lightbox-details">
    <h3 id="lightbox-title"></h3>
    <p id="lightbox-description"></p>
  </div>
  <button class="prev" onclick="window.prevImage()">❮</button>
  <button class="next" onclick="window.nextImage()">❯</button>
</div>

<style>
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
    z-index: 1000;
    flex-direction: column; /* Adicionado */
  }

  .lightbox-content {
    max-width: 80%;
    max-height: 80%;
  }

  .lightbox-details {
    color: white;
    text-align: center;
    margin-top: 5px; /* Reduzido */
  }

  .lightbox-details h3 {
    font-size: 1.2rem; /* Reduzido */
    margin-bottom: 0.5rem; /* Adicionado */
  }

  .lightbox-details p {
    font-size: 0.9rem; /* Reduzido */
  }

  .close,
  .prev,
  .next {
    position: absolute;
    color: white;
    font-size: 2rem;
    cursor: pointer;
    border: none;
    background: none;
  }

  .close {
    top: 10px;
    right: 20px;
  }

  .prev {
    left: 10px;
  }

  .next {
    right: 10px;
  }
</style>