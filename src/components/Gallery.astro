---
// src/components/Gallery.astro
import Lightbox from './Lightbox.astro';

interface Props {
  images: {
    url: string;
    name: string;
    description: string;
  }[];
}

const { images } = Astro.props;
---

<div class="gallery">
  <div class="gallery-grid">
    {images.map((image, index) => (
      <button class="gallery-item-button" data-index={index}>
        <img
          src={image.url}
          alt={image.name}
          class="gallery-item"
        />
      </button>
    ))}
  </div>
</div>

<style>
  .gallery {
    text-align: center;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 10px;
    padding: 20px;
  }

  .gallery-item-button {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
  }

  .gallery-item {
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: transform 0.2s ease-in-out;
  }

  .gallery-item:hover {
    transform: scale(1.05);
  }
</style>